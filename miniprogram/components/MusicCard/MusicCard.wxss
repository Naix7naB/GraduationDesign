.category {
  width: 100%;
  height: 720rpx;
  padding: 20rpx 0;
  background: rgba(81, 120, 555, 0.1);
  box-shadow: 0 0 32rpx var(--greyShadow);
}

.category .title {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  font-weight: 600;
  font-size: var(--fontSizeLarge);
}

.category .swiper {
  height: calc(100% - 80rpx);
}

.category .swiper .swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 60rpx;
}

.category .swiper .swiper-item .item {
  display: flex;
  width: 100%;
}

.category .swiper .swiper-item .item .detail {
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 40rpx;
  padding: 0 32rpx;
  overflow: hidden;
}

.category .swiper .swiper-item .item .detail .song,
.category .swiper .swiper-item .item .detail .singer {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.category .swiper .swiper-item .item .detail .song {
  font-size: var(--fontSizeMediumX);
}

.category .swiper .swiper-item .item .detail .singer {
  font-size: var(--fontSizeSmall);
}

.category .swiper .swiper-item .item .img {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radiusSmall);
  overflow: hidden;
}
