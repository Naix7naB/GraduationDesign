.nav {
  position: relative;
  width: 100%;
}

.nav .title {
  width: 40%;
  margin: 0 auto;
  text-align: center;
  font-size: 36rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.nav .menu-btn {
  position: absolute;
  border: 2rpx solid #b9b9b9;
  border-radius: 40rpx;
  overflow: hidden;
}

.nav .menu-btn .btn-wrapper {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  padding: 0 20rpx;
}

.nav .menu-btn .btn-wrapper::before {
  content: '';
  position: absolute;
  display: block;
  top: 50%;
  left: 50%;
  width: 1rpx;
  height: 32rpx;
  background: #ffffff;
  transform: translate(-50%, -50%);
}

.nav .menu-btn .btn-wrapper .icon {
  font-size: 40rpx;
}
