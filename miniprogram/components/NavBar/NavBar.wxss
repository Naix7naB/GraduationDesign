.nav {
  z-index: 99;
  position: relative;
  width: 100%;
  background: var(--bgTheme);
  overflow: hidden;
}

.nav .title {
  width: 40%;
  margin: 0 auto;
  text-align: center;
  color: var(--white);
  font-size: var(--fontSizeLarge);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.nav .menu-btn {
  position: absolute;
  border: 2rpx solid var(--grey);
  border-radius: 40rpx;
  overflow: hidden;
}

.nav .menu-btn .btn-wrapper {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  padding: 0 20rpx;
  color: var(--white);
  background: var(--blackShadow);
}

.nav .menu-btn .btn-wrapper::before {
  content: '';
  position: absolute;
  display: block;
  top: 50%;
  left: 50%;
  width: 1rpx;
  height: 32rpx;
  background: var(--white);
  transform: translate(-50%, -50%);
}

.nav .menu-btn .btn-wrapper .btn {
  font-size: 40rpx;
}
