.mini-player-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0;
  padding-top: 140rpx;
  background: var(--white);
}

.mini-player-wrapper .mini-player {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 140rpx;
  padding: 20rpx 40rpx;
  color: var(--white);
  background: rgba(31, 57, 105, 0.7);
}

.mini-player-wrapper .mini-player .mini-player-l {
  flex: 1;
  display: flex;
  align-items: center;
}

.mini-player-wrapper .mini-player .mini-player-l .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.mini-player-wrapper .mini-player .mini-player-l .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 24rpx;
  font-size: var(--fontSizeMedium);
  overflow: hidden;
}

.mini-player-wrapper .mini-player .mini-player-l .detail .name,
.mini-player-wrapper .mini-player .mini-player-l .detail .author {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.mini-player-wrapper .mini-player .mini-player-l .detail .author {
  color: rgba(225, 225, 225, 0.7);
  font-size: var(--fontSizeSmall);
}

.mini-player-wrapper .mini-player .mini-player-r {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 24%;
}
