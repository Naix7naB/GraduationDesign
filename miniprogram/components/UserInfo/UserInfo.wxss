.user-info,
.unentered {
  display: flex;
  width: 100%;
  height: 200rpx;
  padding: 0 52rpx;
  background: var(--bgTheme);
}

.user-info {
  align-items: center;
}

.user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radiusSmall);
  overflow: hidden;
}

.user-info .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 36rpx;
  line-height: 1;
  color: var(--white);
}

.user-info .detail .name {
  font-size: var(--fontSizeMediumX);
}

.user-info .detail .point {
  margin-top: 20rpx;
  font-size: var(--fontSizeSmall);
}

.user-info .sign {
  width: 160rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 8rpx;
  text-align: center;
  background: var(--purpleLight);
}

.unentered {
  flex-direction: column;
  justify-content: center;
  color: var(--white);
}

.unentered .title {
  font-size: 52rpx;
  font-weight: 800;
}

.unentered .desc {
  margin-top: 10rpx;
  font-size: var(--fontSizeMedium);
}
