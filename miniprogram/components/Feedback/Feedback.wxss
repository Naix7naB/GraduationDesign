.feedback {
  position: relative;
  width: 100%;
  height: 100%;
  background: var(--white);
}

.feedback .fb-content {
  width: 100%;
  padding: 40rpx;
}

.feedback .fb-content .title {
  padding: 20rpx 0;
  font-weight: 600;
  font-size: var(--fontSizeMediumX);
}

.feedback .fb-content .textarea {
  width: 100%;
  height: 380rpx;
  padding: 32rpx;
  font-size: var(--fontSizeMedium);
  border-radius: var(--radiusLarge);
  background: rgba(115, 115, 115, 0.1);
}

.feedback .fb-content .textarea.ct {
  height: 100rpx;
}

.placeholder {
  color: var(--gray);
  font-size: var(--fontSizeMedium);
}

.p_feedback {
  font-weight: 200;
}

.feedback .submit {
  position: absolute;
  bottom: 120rpx;
  left: 5%;
  width: 90%;
  color: var(--white);
  border-radius: var(--radiusLargeX);
  background: rgba(43, 92, 197, 0.7);
}

.feedback .submit,
.feedback .submit::after {
  border: 0;
}
