.search-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background: var(--white);
}

.search-bar .input-wrapper {
  display: flex;
  align-items: center;
  width: 90%;
  height: 80rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  background: var(--ghostWhite);
}

.search-bar .input-wrapper .search {
  font-size: var(--fontSizeLarge);
}

.search-bar .input-wrapper .input {
  flex: 1;
  height: 100%;
  line-height: 0;
  padding: 0 20rpx;
  font-size: var(--fontSizeMedium);
}

.search-bar .input-wrapper .search,
.search-bar .input-wrapper .placeholder {
  color: var(--gray);
}
