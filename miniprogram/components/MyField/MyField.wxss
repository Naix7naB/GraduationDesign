.field {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 0 32rpx;
  background: var(--white);
}

.field .field-title {
  min-width: 200rpx;
}

.field .field-title .txt {
  position: relative;
  display: inline-block;
  line-height: 0;
  font-size: var(--fontSizeMedium);
}

.field .field-title .txt.required::after {
  content: '*';
  display: inline-block;
  position: absolute;
  top: -3rpx;
  right: -24rpx;
  color: var(--red);
}

.field .field-input {
  flex: 1;
  font-size: var(--fontSizeMedium);
}

.field .space {
  color: rgba(155, 155, 155, 0.6);
}
