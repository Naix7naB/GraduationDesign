.dialog {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 64%;
  height: 20%;
  background: var(--white);
  transform: translate(-50%, -50%);
}

.dialog .close {
  position: absolute;
  top: 0;
  right: 0;
  padding: 16rpx;
  color: var(--grey);
  font-weight: 600;
  font-size: var(--fontSizeLarge);
}

.dialog .dialog-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 40rpx 52rpx;
}

.dialog .dialog-content .title {
  font-weight: 800;
  font-size: var(--fontSizeLarge);
}

.dialog .dialog-content .btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  color: var(--white);
  border-radius: var(--radiusSmallS);
  background: var(--bgTheme);
}

.dialog .dialog-content .btn .wechat {
  margin-right: 10rpx;
  vertical-align: -2rpx;
  font-size: var(--fontSizeLarge);
}

.dialog .dialog-content .btn .txt {
  font-size: var(--fontSizeMedium);
}
