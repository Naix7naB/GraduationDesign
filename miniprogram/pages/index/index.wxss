.instagram {
  width: 100%;
  height: 30%;
}

.school {
  padding: 40rpx;
  font-weight: 600;
  font-size: var(--fontSizeLarge);
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  color: var(--white);
  background: var(--bgTheme);
  border-radius: var(--radiusSmallS);
}

.announcement {
  margin-top: 32rpx;
  background: var(--white);
}

.announcement .title {
  position: relative;
  display: inline-block;
  line-height: 48rpx;
  padding: 20rpx 60rpx;
  font-weight: 600;
  font-size: var(--fontSizeLarge);
}

.announcement .title::before {
  content: '';
  display: block;
  position: absolute;
  top: 50%;
  left: 16%;
  width: 8rpx;
  height: 32rpx;
  background: var(--bgTheme);
  border-radius: var(--radiusSmallS);
  transform: translate(-50%, -50%);
}

.announcement .item {
  padding: 0 40rpx;
}
